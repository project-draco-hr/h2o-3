{
  byte[] b=s.getBytes();
  int off=0;
  for (int i=0; i < b.length; i++) {
    if (b[i] == '\\' || b[i] == '"') {
      putA1(b,off,i);
      put1('\\');
      off=i;
    }
    if (b[i] == '\n') {
      putA1(b,off,i);
      put1('\\');
      put1('n');
      off=i + 1;
    }
    if (b[i] == '\t') {
      putA1(b,off,i);
      put1('\\');
      put1('t');
      off=i + 1;
    }
  }
  return putA1(b,off,b.length);
}
