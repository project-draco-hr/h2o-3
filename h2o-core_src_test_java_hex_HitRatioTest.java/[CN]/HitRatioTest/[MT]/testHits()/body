  pred_dist=new double[]{2,.25f,.25f,.25f,.25f};
  updateHits(actual_label,pred_dist,hits);
  Assert.assertTrue(Arrays.equals(hits,new long[]{1,0,0,0}) || Arrays.equals(hits,new long[]{0,1,0,0}) || Arrays.equals(hits,new long[]{0,0,1,0})|| Arrays.equals(hits,new long[]{0,0,0,1}));
