{
  if (arr == null)   return null;
  if (arr.length == 0)   return null;
  int tlen=0;
  for (  T[] t : arr)   tlen+=t.length;
  T[] result=Arrays.copyOf(arr[0],tlen);
  int j=arr[0].length;
  for (int i=1; i < arr.length; i++) {
    System.arraycopy(arr[i],0,result,j,arr[i].length);
    j+=arr[i].length;
  }
  return result;
}
