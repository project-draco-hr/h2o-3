{
  for (int r=0; r < x.len(); ++r) {
    int xbin=_sp.bin(x.vec(),x.atd(r));
    int ybin=_sp.bin(y.vec(),y.atd(r));
    double weight=w.atd(r);
    if (Double.isNaN(weight))     continue;
    AtomicUtils.DoubleArray.add(_sp._countData[xbin],ybin,weight);
    if (!y.isNA(r)) {
      AtomicUtils.DoubleArray.add(_sp._responseData[xbin],0,weight * y.atd(r));
      AtomicUtils.DoubleArray.add(_sp._responseData[xbin],1,weight);
    }
  }
}
