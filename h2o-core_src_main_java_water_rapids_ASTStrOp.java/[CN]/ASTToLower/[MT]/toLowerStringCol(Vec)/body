{
  Frame f=new MRTask(){
    @Override public void map(    Chunk chk,    NewChunk newChk){
      if (chk instanceof C0DChunk)       for (int i=0; i < chk.len(); i++)       newChk.addNA();
 else       if (((CStrChunk)chk)._isAllASCII) {
        ((CStrChunk)chk).asciiToLower(newChk);
      }
 else {
        BufferedString vs=new BufferedString();
        for (int i=0; i < chk._len; i++) {
          if (chk.isNA(i))           newChk.addNA();
 else           newChk.addStr(new BufferedString(chk.atStr(vs,i).toString().toLowerCase(Locale.ENGLISH)));
        }
      }
    }
  }
.doAll(1,vec).outputFrame();
  return f;
}
