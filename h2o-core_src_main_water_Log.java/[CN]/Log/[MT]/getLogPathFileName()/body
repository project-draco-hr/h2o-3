{
  String ip;
  if (H2O.SELF_ADDRESS == null) {
    ip="UnknownIP";
  }
 else {
    ip=H2O.SELF_ADDRESS.getHostAddress();
  }
  int port=H2O.UDP_PORT - 1;
  String portString=Integer.toString(port);
  String logFileName=getLogDir() + File.separator + "h2o_"+ ip+ "_"+ portString+ ".log";
  return logFileName;
}
