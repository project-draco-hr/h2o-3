def vprint(msg, pretty=False):
    '\n    Print the provided string {msg}, but only when the --verbose option is on.\n      :param msg     String to print.\n      :param pretty  If on, then pprint() will be used instead of the regular print function.\n    '
    if (not config['verbose']):
        return
    if pretty:
        pp(msg)
    else:
        print(msg)
