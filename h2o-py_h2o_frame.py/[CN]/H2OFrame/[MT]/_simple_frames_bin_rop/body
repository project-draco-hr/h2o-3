def _simple_frames_bin_rop(self, data, op):
    if (len(self) == 0):
        return self
    if isinstance(data, H2OFrame):
        return Expr(op, Expr('cbind', Expr(data._vecs)), Expr('cbind', Expr(self._vecs)), length=self.nrow())
    elif isinstance(data, H2OVec):
        return Expr(op, Expr('cbind', Expr([data])), Expr('cbind', Expr(self._vecs)), length=self.nrow())
    elif isinstance(data, Expr):
        return Expr(op, data, Expr('cbind', Expr(self._vecs)), length=self.nrow())
    elif isinstance(data, (int, float)):
        return Expr(op, Expr(data), Expr('cbind', Expr(self._vecs)), length=self.nrow())
    elif isinstance(data, str):
        return Expr(op, Expr(None, data), Expr('cbind', Expr(self._vecs)), length=self.nrow())
    else:
        raise NotImplementedError
