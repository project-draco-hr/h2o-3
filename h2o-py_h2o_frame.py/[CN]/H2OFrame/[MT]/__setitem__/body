def __setitem__(self, b, c):
    "\n    Replace a column in an H2OFrame.\n\n    :param b: A 0-based index or a column name.\n    :param c: The vector that 'b' is replaced with.\n    :return: Returns this H2OFrame.\n    "
    col_expr = None
    row_expr = None
    colname = None
    if isinstance(b, basestring):
        if (b in self.names):
            col_expr = self.names.index(b)
        else:
            col_expr = self.ncol
            colname = b
    elif isinstance(b, int):
        col_expr = b
    elif isinstance(b, tuple):
        row_expr = b[0]
        col_expr = b[1]
        if isinstance(col_expr, basestring):
            if (col_expr not in self.names):
                colname = col_expr
                col_expr = self.ncol
        elif isinstance(col_expr, slice):
            if ((col_expr.start is None) and (col_expr.stop is None)):
                col_expr = slice(0, self.ncol)
    elif isinstance(b, ExprNode):
        row_expr = b
    src = (float('nan') if (c is None) else c)
    expr = (ExprNode(':=', self, src, col_expr, row_expr) if (colname is None) else ExprNode('append', self, src, colname))
    h2o.rapids(ExprNode._collapse_sb(expr._eager()))
    self._update()
