def __setitem__(self, b, c):
    "\n    Replace a column in an H2OFrame.\n\n    :param b: A 0-based index or a column name.\n    :param c: The vector that 'b' is replaced with.\n    :return: Returns this H2OFrame.\n    "
    update_index = (-1)
    if isinstance(b, (str, unicode)):
        update_index = (self.col_names().index(b) if (b in self.col_names()) else self._ncols)
    elif isinstance(b, int):
        update_index = b
    sb = ExprNode(',', ExprNode('=', ExprNode('[', self, None, update_index), c), ExprNode('colnames=', self, update_index, c._col_names[0]))._eager()
    h2o.rapids(ExprNode._collapse_sb(sb))
