def set_name(self, col=None, name=None):
    '\n    Set the name of the column at the specified index.\n    :param col: Index of the column whose name is to be set; may be skipped for 1-column frames\n    :param name: The new name of the column to set\n    :return: the input frame\n    '
    if isinstance(col, basestring):
        col = self.names.index(col)
    if ((not isinstance(col, int)) and (self.ncol > 1)):
        raise ValueError(('`col` must be an index. Got: ' + str(col)))
    if (self.ncol == 1):
        col = 0
    self._ex = expr.ExprNode('colnames=', self, col, name)
    return self
