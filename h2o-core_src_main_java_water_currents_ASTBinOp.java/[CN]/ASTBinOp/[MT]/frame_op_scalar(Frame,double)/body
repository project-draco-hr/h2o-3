{
  for (  Vec vec : fr.vecs())   if (!vec.isNumeric())   throw new IllegalArgumentException("Cannot mix Numeric and non-Numeric types");
  return new ValFrame(new MRTask(){
    @Override public void map(    Chunk[] chks,    NewChunk[] cress){
      for (int c=0; c < chks.length; c++) {
        Chunk chk=chks[c];
        NewChunk cres=cress[c];
        for (int i=0; i < chk._len; i++)         cres.addNum(op(chk.atd(i),d));
      }
    }
  }
.doAll(fr.numCols(),fr).outputFrame());
}
