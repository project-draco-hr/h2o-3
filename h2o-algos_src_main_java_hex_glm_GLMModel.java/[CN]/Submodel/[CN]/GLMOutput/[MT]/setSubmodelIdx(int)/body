{
  _best_lambda_idx=l;
  if (_multinomial) {
    if (_global_beta_multinomial == null) {
      _global_beta_multinomial=new double[nclasses()][];
      for (int i=0; i < _global_beta_multinomial.length; ++i)       _global_beta_multinomial[i]=_submodels[l].betaMultinomial[i].clone();
    }
 else     for (int i=0; i < _global_beta_multinomial.length; ++i)     System.arraycopy(_submodels[l].betaMultinomial[i],0,_global_beta_multinomial[i],0,_global_beta_multinomial[i].length);
  }
 else {
    if (_global_beta == null)     _global_beta=MemoryManager.malloc8d(_coefficient_names.length);
 else     Arrays.fill(_global_beta,0);
    getBeta(l,_global_beta);
    _global_beta=_dinfo.denormalizeBeta(_global_beta);
  }
}
