{
  double bestDev=Double.POSITIVE_INFINITY;
  int bestId=0;
  if (!Double.isNaN(_submodels[_submodels.length - 1].devianceTest)) {
    for (int i=1; i < _submodels.length; ++i)     if (_submodels[i] != null && _submodels[i].devianceTest < bestDev) {
      bestId=i;
      bestDev=_submodels[i].devianceTest;
    }
  }
 else {
    for (int i=1; i < _submodels.length; ++i)     if (_submodels[i] != null && _submodels[i].devianceTrain < bestDev) {
      bestId=i;
      bestDev=_submodels[i].devianceTrain;
    }
  }
  setSubmodelIdx(_best_lambda_idx=bestId);
}
