{
  Frame fr=stk.track(asts[1].exec(env)).getFrame();
  final String[] pattern=asts[2] instanceof AstStrList ? ((AstStrList)asts[2])._strs : new String[]{asts[2].exec(env).getStr()};
  for (  Vec v : fr.vecs())   if (!(v.isCategorical() || v.isString()))   throw new IllegalArgumentException("countmatches() requires a string or categorical column. " + "Received " + fr.anyVec().get_type_str() + ". Please convert column to a string or categorical first.");
  Vec nvs[]=new Vec[fr.numCols()];
  int i=0;
  for (  Vec v : fr.vecs()) {
    if (v.isCategorical())     nvs[i]=countMatchesCategoricalCol(v,pattern);
 else     nvs[i]=countMatchesStringCol(v,pattern);
    i++;
  }
  return new ValFrame(new Frame(nvs));
}
