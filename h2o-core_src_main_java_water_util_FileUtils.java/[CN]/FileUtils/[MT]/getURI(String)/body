{
  File[] roots=File.listRoots();
  if (path.startsWith("./")) {
    return new File(path).toURI();
  }
 else {
    for (    File root : roots) {
      if (path.toLowerCase().startsWith(root.getAbsolutePath().toLowerCase())) {
        return new File(path).toURI();
      }
    }
    return URI.create(path);
  }
}
