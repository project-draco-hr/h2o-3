def __init__(self, fr, by):
    self._fr = fr
    self._by = by
    self._aggs = {}
    self._res = None
    if isinstance(by, basestring):
        self._by = [self._fr.names.index(by)]
    elif isinstance(by, (tuple, list)):
        self._by = [(self._fr.names.index(b) if isinstance(b, basestring) else b) for b in by]
    else:
        self._by = [self._by]
