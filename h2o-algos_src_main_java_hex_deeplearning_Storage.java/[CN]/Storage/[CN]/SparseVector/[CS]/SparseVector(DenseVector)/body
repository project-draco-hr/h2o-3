{
  _size=dv.size();
  for (int i=0; i < dv._data.length; ++i) {
    if (dv.get(i) != 0.0) {
      _nnz++;
    }
  }
  _indices=new int[_nnz];
  _values=new float[_nnz];
  int idx=0;
  for (int i=0; i < dv._data.length; ++i) {
    if (dv.get(i) != 0.0f) {
      _indices[idx]=i;
      _values[idx]=dv.get(i);
      idx++;
    }
  }
  assert(idx == nnz());
}
