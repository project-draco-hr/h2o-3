def prostateGBM():
    df = h2o.import_file(path=pyunit_utils.locate('smalldata/logreg/prostate.csv'))
    df.describe()
    train = df.drop('ID')
    vol = train['VOL']
    vol[(vol == 0)] = None
    gle = train['GLEASON']
    gle[(gle == 0)] = None
    train['CAPSULE'] = train['CAPSULE'].asfactor()
    train.describe()
    my_gbm = h2o.gbm(y=train['CAPSULE'], validation_y=train['CAPSULE'], x=train[1:], validation_x=train[1:], ntrees=50, learn_rate=0.1, distribution='bernoulli')
    my_gbm.show()
    my_gbm_metrics = my_gbm.model_performance(train)
    my_gbm_metrics.show()
    my_gbm_metrics
