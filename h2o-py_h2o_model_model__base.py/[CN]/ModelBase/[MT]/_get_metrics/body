@staticmethod
def _get_metrics(o, train, valid, xval):
    metrics = {}
    if train:
        metrics['train'] = o._model_json['output']['training_metrics']
    if valid:
        metrics['valid'] = o._model_json['output']['validation_metrics']
    if xval:
        metrics['xval'] = o._model_json['output']['cross_validation_metrics']
    if (len(metrics) == 0):
        metrics['train'] = o._model_json['output']['training_metrics']
    return metrics
