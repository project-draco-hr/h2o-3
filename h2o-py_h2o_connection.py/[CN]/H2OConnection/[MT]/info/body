def info(self, refresh=False):
    u'\n        Information about the current state of the connection, or None if it has not been initialized properly.\n\n        :param refresh: If False, then retrieve the latest known info; if True then fetch the newest info from the\n            server. Usually you want `refresh` to be True, except right after establishing a connection when it is\n            still fresh.\n        :return: H2OCluster object.\n        '
    if (self._stage == 0):
        return None
    if refresh:
        self._cluster_info = self.request(u'GET /3/Cloud')
    self._cluster_info.connection = self
    return self._cluster_info
