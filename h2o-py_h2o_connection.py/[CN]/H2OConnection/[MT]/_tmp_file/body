@staticmethod
def _tmp_file(kind):
    u'\n        Generate names for temporary files. `kind` is one of "stdout", "stderr", "pid" and "salt". The "salt" kind\n        is used for process name, not for a file, so it doesn\'t contain a path. All generated names are based on the\n        user name of the currently logged-in user. This is a helper method for ._start_h2o_server().\n        '
    username = ((os.getenv(u'USERNAME') if (sys.platform == u'win32') else os.getenv(u'USER')) or u'unknownUser')
    usr = re.sub(u'\\W', u'_', username)
    if (kind == u'salt'):
        return ((usr + u'_') + u''.join((choice(u'0123456789abcdefghijklmnopqrstuvwxyz') for _ in range(6))))
    ext = (u'pid' if (kind == u'pid') else kind[3:])
    return os.path.join(tempfile.mkdtemp(), (u'h2o_%s_started_from_python.%s' % (usr, ext)))
