@staticmethod
def _prepare_file_payload(filename):
    u'\n        Prepare `filename` to be sent to the server. The "preparation" consists of creating a data structure suitable\n        for passing to requests.request().\n        '
    if (not filename):
        return None
    if (not isinstance(filename, str)):
        raise ValueError((u'Parameter `filename` must be a string: %r' % filename))
    absfilename = os.path.abspath(filename)
    if (not os.path.exists(absfilename)):
        raise ValueError((u'File %s does not exist' % filename))
    return {os.path.basename(absfilename): open(absfilename, u'rb'), }
