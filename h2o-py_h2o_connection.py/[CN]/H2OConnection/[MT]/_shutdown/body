@staticmethod
def _shutdown(conn, prompt):
    '\n    Shut down the specified instance. All data will be lost.\n    This method checks if H2O is running at the specified IP address and port, and if it is, shuts down that H2O\n    instance.\n    :param conn: An H2OConnection object containing the IP address and port of the server running H2O.\n    :param prompt: A logical value indicating whether to prompt the user before shutting down the H2O server.\n    :return: None\n    '
    global __H2OCONN__
    if (conn is None):
        raise ValueError('There is no H2O instance running.')
    try:
        if (not conn.cluster_is_up(conn)):
            raise ValueError('There is no H2O instance running at ip: {0} and port: {1}'.format(conn.ip(), conn.port()))
    except:
        ip = conn.ip()
        port = conn.port()
        __H2OCONN__ = None
        raise ValueError('The H2O instance running at {0}:{1} has already been shutdown.'.format(ip, port))
    if (not isinstance(prompt, bool)):
        raise ValueError('`prompt` must be TRUE or FALSE')
    if prompt:
        question = 'Are you sure you want to shutdown the H2O instance running at {0}:{1} (Y/N)? '.format(conn.ip(), conn.port())
        response = (input(question) if PY3 else raw_input(question))
    else:
        response = 'Y'
    if ((response == 'Y') or (response == 'y')):
        conn.post(url_suffix='Shutdown')
        __H2OCONN__ = None
