{
  int idx=_str.length() - 1;
  int lo=_x, hi=idx;
  String str=_str;
  if (idx < lo) {
    lo=idx;
    hi=lo;
  }
  String s=msg + '\n' + str+ '\n';
  int i;
  for (i=0; i < lo; i++)   s+=' ';
  s+='^';
  i++;
  for (; i < hi; i++)   s+='-';
  if (i <= hi)   s+='^';
  s+='\n';
  throw new IllegalASTException(s);
}
