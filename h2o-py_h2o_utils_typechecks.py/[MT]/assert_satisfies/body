def assert_satisfies(v, cond):
    u'\n    Assert that variable satisfies the provided condition.\n\n    :param v: variable to check. Its value is only used for error reporting.\n    :param bool cond: condition that must be satisfied. Should be somehow related to the variable ``v``.\n    '
    if (not cond):
        (vname, vexpr) = _retrieve_assert_arguments()
        raise H2OValueError(u'Argument `{var}` (= {val!r}) does not satisfy the condition {expr}'.format(var=vname, val=v, expr=vexpr), var_name=vname, skip_frames=1)
