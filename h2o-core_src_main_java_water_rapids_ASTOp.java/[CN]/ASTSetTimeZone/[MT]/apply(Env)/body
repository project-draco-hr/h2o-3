{
  Set<String> idSet=DateTimeZone.getAvailableIDs();
  if (!idSet.contains(_tz))   throw new IllegalArgumentException("Unacceptable timezone name given: " + _tz + ".  For a list of acceptable names, use listTimezone().");
  new MRTask(){
    @Override public void setupLocal(){
      ParseTime.setTimezone(_tz);
    }
  }
.doAllNodes();
}
