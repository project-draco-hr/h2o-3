{
  if (error_count() > 0)   throw H2OModelBuilderIllegalArgumentException.makeFromBuilder(this);
  if (!nFoldCV())   return trainModelImpl(progressUnits(),true);
  return start(new H2O.H2OCountedCompleter(){
    @Override protected void compute2(){
      computeCrossValidation();
      tryComplete();
    }
    @Override public boolean onExceptionalCompletion(    Throwable ex,    CountedCompleter caller){
      failed(ex);
      return true;
    }
  }
,(nFoldWork() + 1) * progressUnits(),true);
}
