def download_csv(data, filename):
    '\n  Download an H2O data set to a CSV file on the local disk.\n  Warning: Files located on the H2O server may be very large! Make\n  sure you have enough hard drive space to accomodate the entire file.\n  :param data: an H2OFrame object to be downloaded.\n  :param filename:A string indicating the name that the CSV file should be\n  should be saved to.\n  :return: None\n  '
    if (not isinstance(data, H2OFrame)):
        raise (ValueError, '`data` argument must be an H2OFrame, but got {0}'.format(type(data)))
    url = ((((('http://' + H2OConnection.ip()) + ':') + str(H2OConnection.port())) + '/3/DownloadDataset?frame_id=') + data.send_frame())
    with open(filename, 'w') as f:
        response = urllib2.urlopen(url)
        f.write(response.read())
        f.close()
