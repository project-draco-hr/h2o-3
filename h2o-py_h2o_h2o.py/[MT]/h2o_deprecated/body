def h2o_deprecated(newfun=None):

    def o(fun):
        if (newfun is not None):
            m = '{} is deprecated. Use {}.'.format(fun.__name__, newfun.__name__)
        else:
            m = '{} is deprecated.'.format(fun.__name__)

        @functools.wraps(fun)
        def i(*args, **kwargs):
            print 
            print 
            warnings.warn(m, category=DeprecationWarning, stacklevel=2)
            return newfun(*args, **kwargs)
        return i
    return o
