def download_pojo(model, path=''):
    '\n  Download the POJO for this model to the directory specified by path (no trailing slash!).\n  If path is "", then dump to screen.\n  :param model: Retrieve this model\'s scoring POJO.\n  :param path:  An absolute path to the directory where POJO should be saved.\n  :return: None\n  '
    model_id = model._key
    java = H2OConnection.get(('Models.java/' + model_id))
    file_path = (((path + '/') + model_id) + '.java')
    if (path == ''):
        print java.text
    else:
        with open(file_path, 'w') as f:
            f.write(java.text)
