def download_pojo(model, path='', get_jar=True):
    '\n  Download the POJO for this model to the directory specified by path (no trailing slash!).\n  If path is "", then dump to screen.\n\n  :param model: Retrieve this model\'s scoring POJO.\n  :param path:  An absolute path to the directory where POJO should be saved.\n  :param get_jar: Retrieve the h2o genmodel jar also.\n  :return: None\n  '
    java = H2OConnection.get(('Models.java/' + model._id))
    file_path = (((path + '/') + model._id) + '.java')
    if (path == ''):
        print java.text
    else:
        with open(file_path, 'w') as f:
            f.write(java.text)
    if (get_jar and (path != '')):
        url = H2OConnection.make_url('h2o-genmodel.jar')
        filename = ((path + '/') + 'h2o-genmodel.jar')
        response = urllib2.urlopen(url)
        with open(filename, 'w') as f:
            f.write(response.read())
