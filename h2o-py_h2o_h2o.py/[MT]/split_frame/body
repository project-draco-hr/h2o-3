def split_frame(data, ratios=[0.75], destination_frames=None):
    '\n  Split a frame into distinct subsets of size determined by the given ratios.\n  The number of subsets is always 1 more than the number of ratios given.\n  :param data: The dataset to split.\n  :param ratios: The fraction of rows for each split.\n  :param destination_frames: names of the split frames\n  :return: a list of frames\n  '
    fr = data.send_frame()
    if (destination_frames is None):
        destination_frames = ''
    j = H2OConnection.post_json('SplitFrame', dataset=fr, ratios=ratios, destination_frames=destination_frames)
    splits = []
    for i in j['destination_frames']:
        splits += [get_frame(i['name'])]
        removeFrameShallow(i['name'])
    removeFrameShallow(fr)
    return splits
