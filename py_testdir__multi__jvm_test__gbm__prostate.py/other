import sys
sys.path.insert(1, '../../h2o-py/')
import h2o
from h2o import H2OFrame
ip_port = sys.argv[2].split(':')
print ip_port
ip = ip_port[0]
port = int(ip_port[1])
cluster = h2o.init(ip=ip, port=port)
df = H2OFrame(remote_fname='../../../smalldata/logreg/prostate.csv')
print df.describe()
del df['ID']
vol = df['VOL']
vol[(vol == 0)] = None
gle = df['GLEASON']
gle[(gle == 0)] = None
df['CAPSULE'] = df['CAPSULE'].asfactor()
r = vol.runif()
train = df[(r < 0.8)]
test = df[(r >= 0.8)]
print train.describe()
print test.describe()
from h2o import H2OGBM
gbm = H2OGBM(training_frame=train, y='CAPSULE', x=[name for name in train.names() if (name != 'CAPSULE')], validation_frame=test, ntrees=50, max_depth=5, learn_rate=0.1)
gbm.fit()
mm = gbm.model_performance(test)
mm.show()
