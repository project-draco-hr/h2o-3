def __init__(self, abspath_tempdir, driver, nodes_per_cloud, xmx, output_dir):
    self.ip = None
    self.port = None
    self.job_id = None
    self.driver = driver
    self.nodes_per_cloud = nodes_per_cloud
    self.xmx = xmx
    self.output_dir = output_dir
    self.notify_file = os.path.join(abspath_tempdir, 'notify.txt')
