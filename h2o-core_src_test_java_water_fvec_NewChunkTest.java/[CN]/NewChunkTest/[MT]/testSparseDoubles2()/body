{
  NewChunk nc=new NewChunk(null,0,true);
  int N=1000;
  nc.addZeros(N);
  nc.addNum(Math.PI);
  nc.addZeros(N);
  Chunk c=nc.compress();
  int i=0;
  for (; i < N; )   assertEquals(0,c.atd(i++),1e-16);
  assertEquals(Math.PI,c.atd(i++),1e-16);
  for (; i < 2 * N + 1; )   assertEquals(0,c.atd(i++),1e-16);
}
