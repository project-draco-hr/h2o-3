{
  final int nchunks=espc.length - 1;
  final Vec v0=new Vec(group.addVec(),espc,domain);
  new MRTask(){
    @Override protected void setupLocal(){
      for (int i=0; i < nchunks; i++) {
        Key k=v0.chunkKey(i);
        if (k.home())         DKV.put(k,new C0LChunk(l,v0.chunkLen(i)),_fs);
      }
    }
  }
.doAllNodes();
  DKV.put(v0._key,v0);
  return v0;
}
