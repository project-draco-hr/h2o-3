{
  int len=s.length();
  for (int i=0; i < len; i++) {
    char c=s.charAt(i);
    if (c == '<')     sb.append("&lt;");
 else     if (c == '>')     sb.append("&gt;");
 else     if (c == '&')     sb.append("&amp;");
 else     if (c == '"')     sb.append("&quot;");
 else     sb.append(c);
  }
  return sb;
}
