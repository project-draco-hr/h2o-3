def open_log():
    '\n    View H2O R Logs\n    Open existing logs of H2O R POST commands and error resposnes on local disk. Used primarily for debugging purposes.\n\n    :return: None\n    '
    log_file_name = _get_log_file_name()
    if (not os.path.isfile(log_file_name)):
        raise RuntimeError((log_file_name + ' does not exist'))
    if (platform.system() == 'Windows'):
        os.system(('start ' + log_file_name))
    else:
        os.system(('open ' + log_file_name))
