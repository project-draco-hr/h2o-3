{
  for (int i=0; i < numRows; ++i) {
    System.out.print(i + ": ");
    for (int j=0; j < matrix[i].length; ++j) {
      if (matrix[i][j] >= 0.0)       System.out.print(" ");
 else       System.out.print("-");
      System.out.print(_format.format(Math.abs(matrix[i][j])) + " ");
    }
    System.out.println("");
  }
  if (newLine == true)   System.out.println("");
}
