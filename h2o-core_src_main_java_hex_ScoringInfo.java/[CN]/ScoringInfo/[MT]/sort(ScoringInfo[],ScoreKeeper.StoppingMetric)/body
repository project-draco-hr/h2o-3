{
  if (null == scoringInfos)   return;
  if (scoringInfos.length == 0)   return;
  if (criterion == ScoreKeeper.StoppingMetric.AUTO)   criterion=scoringInfos[0].classification ? ScoreKeeper.StoppingMetric.logloss : ScoreKeeper.StoppingMetric.deviance;
  Arrays.sort(scoringInfos,ScoringInfo.comparator(criterion));
}
