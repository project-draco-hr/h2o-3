def parse_arguments(argv):
    global ip
    global port
    i = 1
    while (i < len(argv)):
        s = argv[i]
        if (s == '--usecloud'):
            i += 1
            ip_port = argv[i]
            arr = ip_port.split(':')
            ip = arr[0]
            port = int(arr[1])
        i += 1
