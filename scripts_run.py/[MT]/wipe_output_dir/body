def wipe_output_dir():
    print 'Wiping output directory.'
    try:
        if os.path.exists(g_output_dir):
            shutil.rmtree(g_output_dir)
    except OSError as e:
        print ('ERROR: Removing output directory %s failed: ' % g_output_dir)
        print '       (errno {0}): {1}'.format(e.errno, e.strerror)
        print ''
        sys.exit(1)
