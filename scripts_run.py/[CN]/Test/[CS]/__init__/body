def __init__(self, test_dir, test_short_dir, test_name, output_dir, ipynb_runner_dir, hadoop_namenode, on_hadoop, r_demo):
    '\n        Create a Test.\n\n        @param test_dir: Full absolute path to the test directory.\n        @param test_short_dir: Path from h2o/R/tests to the test directory.\n        @param test_name: Test filename with the directory removed.\n        @param output_dir: The directory where we can create an output file for this process.\n        @param ipynb_runner_dir: directory that has ipython notebook runner script (called notebook_runner.py)\n        @return: The test object.\n        '
    self.test_dir = test_dir
    self.test_short_dir = test_short_dir
    self.test_name = test_name
    self.output_dir = output_dir
    self.output_file_name = ''
    self.notebook_runner = os.path.join(ipynb_runner_dir, 'notebook_runner.py')
    self.hadoop_namenode = hadoop_namenode
    self.on_hadoop = on_hadoop
    self.r_demo = r_demo
    self.cancelled = False
    self.terminated = False
    self.returncode = Test.test_did_not_complete()
    self.start_seconds = (-1)
    self.pid = (-1)
    self.ip = None
    self.port = (-1)
    self.child = None
