def _create_output_dir(self):
    try:
        if (not os.path.exists(self.output_dir)):
            os.makedirs(self.output_dir)
    except OSError as e:
        print ''
        print 'mkdir failed (errno {0}): {1}'.format(e.errno, e.strerror)
        print ('    ' + self.output_dir)
        print ''
        print '(try adding --wipe)'
        print ''
        sys.exit(1)
