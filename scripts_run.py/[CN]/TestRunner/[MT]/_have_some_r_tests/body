def _have_some_r_tests(self):
    '\n        Do we have any R tests to run at all?\n        (There might be tests of a different language to run, even if there are no R tests.)\n        '
    for test in self.tests:
        test_name = test.get_test_name()
        if is_runit_test_file(test_name):
            return True
    return False
