def check_params_update_kwargs(params_dict, kw, function, print_params):
    for k in kw:
        if (k in params_dict):
            params_dict[k] = kw[k]
        else:
            raise Exception(("illegal parameter '%s' in %s" % (k, function)))
    if print_params:
        print (('%s parameters:' % function) + repr(params_dict))
        sys.stdout.flush()
