{
  int idx=E._ast.length - 1;
  int lo=E._x, hi=idx;
  String str=E._str;
  if (idx < lo) {
    lo=idx;
    hi=lo;
  }
  String s=msg + '\n' + str+ '\n';
  int i;
  for (i=0; i < lo; i++)   s+=' ';
  s+='^';
  i++;
  for (; i < hi; i++)   s+='-';
  if (i <= hi)   s+='^';
  s+='\n';
  throw new IllegalArgumentException(s);
}
