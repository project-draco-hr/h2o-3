def __init__(self, metric_json, on_train, on_valid, algo):
    '\n    Create a new Binomial Metrics object (essentially a wrapper around some json)\n    :param metric_json: A blob of json holding all of the needed information\n    :param on_train: Metrics built on training data (default is False)\n    :param on_valid: Metrics built on validation data (default is False)\n    :param algo: The algorithm the metrics are based off of (e.g. deeplearning, gbm, etc.)\n    :return: A new H2OBinomialModelMetrics object.\n    '
    if (metric_json is None):
        raise ValueError('Missing data for `raw_auc`.')
    self._metric_json = metric_json
    self._on_train = on_train
    self._on_valid = on_valid
    self._algo = algo
