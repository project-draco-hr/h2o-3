{
  GLMGradientTask gt=_glmp._family == Family.binomial ? new LBFGS_LogisticGradientTask(_dinfo,_glmp,_lambda,beta,_reg,_rowFilter).doAll(_dinfo._adaptedFrame) : new GLMGradientTask(_dinfo,_glmp,_lambda,beta,_reg,_rowFilter).doAll(_dinfo._adaptedFrame);
  return new GLMGradientInfo(gt._likelihood,gt._likelihood * _reg + .5 * _lambda * ArrayUtils.l2norm2(beta,_dinfo._intercept),gt._gradient);
}
