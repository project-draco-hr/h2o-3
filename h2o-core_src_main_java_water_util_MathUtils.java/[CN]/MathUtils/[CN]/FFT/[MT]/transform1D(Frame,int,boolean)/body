{
  initCheck(input,N,1,1);
  return new MRTask(){
    @Override public void map(    Chunk[] cs,    NewChunk[] ncs){
      double[] a=new double[N];
      for (int row=0; row < cs[0]._len; ++row) {
        for (int i=0; i < N; ++i)         a[i]=cs[i].atd(row);
        if (!inverse)         new DoubleFFT_1D(N).realForward(a);
 else         new DoubleFFT_1D(N).realInverse(a,true);
        for (int i=0; i < N; ++i)         ncs[i].addNum(a[i]);
      }
    }
  }
.doAll(input.numCols(),input).outputFrame();
}
