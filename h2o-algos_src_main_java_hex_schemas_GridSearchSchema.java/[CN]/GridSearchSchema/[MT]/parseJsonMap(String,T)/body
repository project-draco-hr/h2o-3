{
  Gson gson=new Gson();
  Map<String,Object> m;
  m=gson.fromJson(json,map.getClass());
  for (  Map.Entry<String,Object> e : m.entrySet()) {
    if (e.getValue() instanceof List) {
      map.put(e.getKey(),((List)e.getValue()).toArray());
    }
 else {
      map.put(e.getKey(),new Object[]{e.getValue()});
    }
  }
  return map;
}
