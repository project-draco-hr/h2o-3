def init(*args, **kwargs):
    unit_main()
    global nodes, n0

    def checkIsNone(thingName, thing):
        if (thing is not None):
            print ('h2o: %s is not None before h2o.init()..Unlikely that makes sense? %s' % (thingName, thing))
    checkIsNone('nodes', nodes)
    checkIsNone('n0', n0)
    checkIsNone('h2o_nodes.nodes', h2o_nodes.nodes)
    nodes = h2o_bc.init(*args, **kwargs)
    n0 = nodes[0]
