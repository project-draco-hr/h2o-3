{
  ASTNumList dim=new ASTNumList(ast.columns(dst.names()));
  if (dim.isEmpty())   return new ASTNumList(0,dstX);
  if (!(0 <= dim.min() && dim.max() - 1 < dstX) && !(1 == dim.cnt() && dim.max() - 1 == dstX))   throw new IllegalArgumentException("Selection must be an integer from 0 to " + dstX);
  return dim;
}
