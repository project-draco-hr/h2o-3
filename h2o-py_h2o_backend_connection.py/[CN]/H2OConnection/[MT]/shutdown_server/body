def shutdown_server(self, prompt):
    u'\n        Shut down the specified server.\n\n        This method checks if H2O is running at the specified IP address and port, and if it is, shuts down that H2O\n        instance. All data will be lost.\n\n        :param self: An H2OConnection object containing the IP address and port of the server running H2O.\n        :param prompt: A logical value indicating whether to prompt the user before shutting down the H2O server.\n\n        :returns: None\n        '
    if (not self.cluster_is_up()):
        return
    assert_is_type(prompt, bool)
    if prompt:
        question = (u'Are you sure you want to shutdown the H2O instance running at %s (Y/N)? ' % self._base_url)
        response = input(question)
    else:
        response = u'Y'
    if (response.lower() in {u'y', u'yes'}):
        self.request(u'POST /3/Shutdown')
        self.close()
