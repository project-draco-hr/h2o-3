def _add_col(x, source, column):
    if (not isinstance(column, str)):
        raise ValueError('column must be a str but got {1}'.format(type(column)))
    if (not isinstance(column, str)):
        raise ValueError('column must be a name in {0}, but got {1}'.format(source.col_names(), column))
    x[column] = source[column]
    return x
