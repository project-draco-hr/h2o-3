def find_threshold_by_max_metric(self, metric):
    '\n    :param metric: A string in {"min_per_class_accuracy", "absolute_MCC", "precision", "recall", "specificity", "accuracy", "f0point5", "f2", "f1", "mean_per_class_accuracy"}\n    :return: the threshold at which the given metric is maximum.\n    '
    crit2d = self._metric_json['max_criteria_and_metric_scores']
    for e in crit2d.cell_values:
        if (e[0] == ('max ' + metric)):
            return e[1]
    raise ValueError(('No metric ' + str(metric)))
