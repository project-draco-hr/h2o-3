def mcc(self, thresholds=None):
    u'\n        :param thresholds: thresholds parameter must be a list (i.e. [0.01, 0.5, 0.99]). If None, then the thresholds in this set of metrics will be used.\n        :return: The absolute MCC (a value between 0 and 1, 0 being totally dissimilar, 1 being identical)\n        '
    return self.metric(u'absolute_mcc', thresholds=thresholds)
