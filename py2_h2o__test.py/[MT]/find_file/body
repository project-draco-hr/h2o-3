def find_file(base):
    f = os.path.expanduser(base)
    if (not os.path.exists(f)):
        f = ('../' + base)
    if (not os.path.exists(f)):
        f = ('../../' + base)
    if (not os.path.exists(f)):
        f = ('../../../' + base)
    if (not os.path.exists(f)):
        f = ('py/' + base)
    if (not os.path.exists(f)):
        f = ('../h2o/' + base)
    if (not os.path.exists(f)):
        f = ('../../h2o/' + base)
    if (not os.path.exists(f)):
        raise Exception(('unable to find file %s' % base))
    return os.path.abspath(f)
