{
  if (null == key)   throw new IllegalArgumentException(description + " key must be non-null.");
  Value v=DKV.get(key);
  if (null == v)   throw new IllegalArgumentException(description + " key not found: " + key);
  if (!v.isFrame() && !v.isSubclassOf(Frame.class))   throw new IllegalArgumentException(description + " key points to a non-Frame object in the KV store: " + key);
  Frame frame=v.get();
  if (frame.numCols() <= 1)   throw new IllegalArgumentException(description + " must have at least 2 features (incl. response).");
  return frame;
}
