{
  while (true) {
    ByteBuffer bb=null;
synchronized (_bbs) {
      int sz=_bbs.size();
      if (sz > 0) {
        bb=_bbs.remove(sz - 1);
        _cached++;
        _numer++;
      }
    }
    if (bb != null)     return stats(bb);
    try {
      bb=_direct ? ByteBuffer.allocateDirect(_size).order(ByteOrder.nativeOrder()) : ByteBuffer.wrap(MemoryManager.malloc1(_size)).order(ByteOrder.nativeOrder());
synchronized (this) {
        _made++;
        _denom++;
        _goal=Math.max(_goal,_made - _freed);
        _lastGoal=System.nanoTime();
      }
      return stats(bb);
    }
 catch (    OutOfMemoryError oome) {
      if (!"Direct buffer memory".equals(oome.getMessage()))       throw oome;
      System.out.println("OOM DBB - Sleeping & retrying");
      try {
        Thread.sleep(100);
      }
 catch (      InterruptedException ignore) {
      }
    }
  }
}
