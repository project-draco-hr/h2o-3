{
  byte[] b=s.getBytes();
  int off=0;
  for (int i=0; i < b.length; i++) {
    if (b[i] == '<') {
      putA1(b,off,i).putA1(LTS,0,LTS.length);
      off=i + 1;
    }
    if (b[i] == '>') {
      putA1(b,off,i).putA1(GTS,0,GTS.length);
      off=i + 1;
    }
    if (b[i] == '&') {
      putA1(b,off,i).putA1(AMP,0,AMP.length);
      off=i + 1;
    }
    if (b[i] == '"') {
      putA1(b,off,i).putA1(QUO,0,QUO.length);
      off=i + 1;
    }
  }
  return putA1(b,off,b.length);
}
