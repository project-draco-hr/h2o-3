{
  super(domain);
  _intercept=intercept;
  _rank=rank;
  _glm=glm;
  _threshold=threshold;
  _computeMetrics=computeMetrics;
  _ymu=ymu;
  _ymuLink=_glm.link(ymu);
  if (_computeMetrics)   _metricBuilder=_glm._family == Family.binomial ? new MetricBuilderBinomial(domain) : new MetricBuilderRegression();
}
