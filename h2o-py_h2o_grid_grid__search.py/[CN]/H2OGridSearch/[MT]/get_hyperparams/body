def get_hyperparams(self, id, display=True):
    '\n    Get the hyperparameters of a model explored by grid search.\n    :param id: int or str, either the index of desired model or its model id\n    :param display: boolean, flag whether to display hyperparameter names\n    :return: str, hyperparameters\n    '
    s = ''
    idx = (id if isinstance(id, int) else self.model_ids.index(id))
    model = self[idx]
    for h in self.hyper_params:
        s += (str(model.params[h]['actual']) + ', ')
    if display:
        print 'Hyperparameters:', self.hyper_params.keys()
    return s[:(-2)]
