{
  if (_ex == null) {
    final DException dex=new DException(ex,thrower_clz);
    new JAtomic(){
      @Override boolean abort(      Job job){
        return job._ex != null;
      }
      @Override void update(      Job job){
        job._ex=dex.toEx();
        job._stop_requested=true;
      }
    }
;
  }
}
